<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
<!-- #12 call avatar_url to fetch the current user's avatar. -->
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="media-left">
<!-- #13 use Rails' image_tag method to create an <img>. -->
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>,
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>

<!-- #14 display all of the user's posts and comments using partials. -->
<% if(@user.user_has_posts?) %>
  <h2>Posts</h2>
  <%= render @user.posts %>
<% else %>
  <p><%= "#{@user.name} has not submitted any posts yet." %></p>
<% end %>

<% if(@user.user_has_comments?) %>
  <h2>Comments</h2>
  <%= render @user.comments %>
<% else %>
  <p><%= "#{@user.name} has not submitted any comments yet." %></p>
<% end %>

<% if(@favorites.any?) %>
  <h2>Favorites</h2>
  <%= render partial: 'users/favorite_posts' %>
<% else %>
  <p><%= "#{@user.name} has not favorited any posts yet." %></p>
<% end %>
